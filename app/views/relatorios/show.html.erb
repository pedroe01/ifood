        </tr>
      </tbody>
    </table>
  </div>


  <br><br><br>
  <div class="headline2">
    <h2>Vendas por produto</h2>
  </div>
  <!-- Gráfico de Barras -->
  <div class="container mt-4">
    <canvas id="graficoBarras"></canvas>
  </div>

  <!-- Adicionando o Bootstrap JS (opcional, caso precise de funcionalidades do Bootstrap que utilizem JavaScript) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Adicionando o Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@3.6.0/dist/chart.min.js"></script>

  <script>
    // Dados fictícios para o gráfico de barras
    const produtos = ['Produto A', 'Produto B', 'Produto C', 'Produto D', 'Produto E'];
    const faturamento = [2500, 3000, 2000, 3500, 4000]; // Valores fictícios de faturamento

    // Configurações do gráfico de barras
    const ctx = document.getElementById('graficoBarras').getContext('2d');
    const graficoBarras = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: produtos,
        datasets: [{
          label: 'Faturamento por Produto',
          data: faturamento,
          backgroundColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
          ],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true,
            title: {
              display: true,
              text: 'Faturamento'
            }
          },
          x: {
            title: {
              display: true,
              text: 'Produtos'
            }
          }
        }
      }
    });
  </script>


