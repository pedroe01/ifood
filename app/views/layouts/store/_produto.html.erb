<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <img class="card-img-top" src=<%= prod.img %> alt=<%= prod.descricao %> />
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder"><%= prod.nome %></h5>
        <h7><%= prod.descricao %></h7><br>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <!-- Product price-->
      <div class="text-center">
        <p class="btn btn-success mt-auto" > R$ <%= sprintf('%.2f', prod.valor).to_s.gsub('.', ',') %> </p>
      </div>
      <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Comprar</a></div>
    </div>
  </div>
</div>
