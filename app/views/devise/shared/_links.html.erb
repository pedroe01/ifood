<%#- if controller_name != 'sessions' %>
  <%#= link_to "Log in", new_session_path(resource_name), class: "justify-content-center text-center" %><br />
<%# end %>

<%#- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%#= link_to "Cadastre-se", new_registration_path(resource_name), class: "justify-content-center text-center" %><br />
<%# end %>

<%#- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%#= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "justify-content-center text-center" %><br />
<%# end %>

<%#- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%#= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class: "justify-content-center text-center" %><br />
<%# end %>

<%#- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%#= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), class: "justify-content-center text-center" %><br />
<%# end %>

<%- if devise_mapping.omniauthable? %>
  <div class="text-center justify-content-center">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= form_for "Login", url: omniauth_authorize_path(resource_name, provider), method: :post, data: {turbo: "false"} do |f| %>
        <% case provider %>
        <% when /google/i %>
          <%= f.submit "Login", type: "image", src: url_for("/assets/btn_google_signin_light_normal_web.png"), width: '200px' %>
        <% when /facebook/i %>
          <%= f.submit "Login", type: "image", src: url_for("/assets/loginfacebook.png"), width: '200px' %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
