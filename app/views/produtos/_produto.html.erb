<div id="<%= dom_id produto %>">
  <tr>
    <td>
      <strong>Nome:</strong>
      <%= produto.nome %>
    </td>

    <td>
      <strong>Link imagem:</strong>
      <%= produto.img.present? ? "Sim" : "Não" %>
    </td>

    <td>
      <strong>Descrição:</strong>
      <%= produto.descricao %>
    </td>

    <td>
      <strong>Valor:</strong>
      <%= produto.valor %>
    </td>

    <td>
      <strong>Categoria:</strong>
      <%= produto.categoria %>
    </td>
  </tr>
</div>
